{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <h1>Client</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ client.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ client.prenom }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ client.telephone }}</td>
            </tr>
            <tr>
                <th>Courriel</th>
                <td>{{ client.courriel }}</td>
            </tr>
            <tr>
                <th>DOB</th>
                <td>{{ client.DOB ? client.DOB|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Allergies</th>
                <td>{{ client.allergies }}</td>
            </tr>
            <tr>
                <th>Numero_secu</th>
                <td>{{ client.numeroSecu }}</td>
            </tr>
            <tr>
                <th>Assurance</th>
                <td>{{ client.assurance ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Assurance_name</th>
                <td>{{ client.assuranceName }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_client_index') }}">back to list</a>

    <a href="{{ path('app_client_edit', {'id': client.id}) }}">edit</a>

    {{ include('client/_delete_form.html.twig') }}
{% endblock %}
