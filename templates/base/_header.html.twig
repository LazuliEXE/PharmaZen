{% block body %}
    <header class="sticky-top">
        <nav class="navbar navbar-expand-lg sticky-top">
            <hr class="border border-dark border-1 opacity-100" style="margin: 0;">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <a class="navbar-brand fs-3" href="/">
                    <img class="rounded-5 bg-white" src="{{ asset('images/Pharmazen.svg') }}" width="48" height="48" alt="Logo">
                    PharmaZen
                </a>
                <form class="d-flex flex-grow-1 mx-3" role="search" style="max-width: 600px;">
                    <input class="form-control me-2" type="search" placeholder="Entrez votre produit..." aria-label="Search">
                    <button class="btn btn-secondary bg-gradient" type="submit">
                        <img src="{{ asset('images/search.svg') }}" width="24" height="24" alt="Search">
                    </button>
                </form>
                <div class="d-flex align-items-center p-2 my-3 rounded-5 bg-white">
                    <a class="nav-link me-3" href="#">
                        <img src="{{ asset('images/cart.svg') }}" width="32" height="32" alt="Cart">
                    </a>
                    <a class="nav-link" href="{{ path('app_login') }}">
                        <img src="{{ asset('images/person.svg') }}" width="32" height="32" alt="Account">
                    </a>
                </div>
            </div>
        </nav>
        <hr class="border border-dark border-1 opacity-100" style="margin: 0;">
    </header>
{% endblock %}
